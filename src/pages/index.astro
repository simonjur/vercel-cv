---
import Layout from '../layouts/Layout.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import { readFile } from 'node:fs/promises';
import { join } from 'node:path';

// Read CV markdown content
const cvContent = await readFile(join(process.cwd(), 'content', 'cv.md'), 'utf-8');

// Parse markdown content
const lines = cvContent.split('\n');
let name = '';
let title = '';
let location = '';
let intro = '';
const experiences = [];
const skills = {};

let currentSection = '';
let currentExp = null;

for (let i = 0; i < lines.length; i++) {
  const line = lines[i];
  
  if (line.startsWith('# ')) {
    name = line.replace('# ', '').trim();
  } else if (line.startsWith('## ') && !line.includes('Experience') && !line.includes('Core Skills')) {
    title = line.replace('## ', '').trim();
  } else if (line.startsWith('**Location:**')) {
    location = line.replace('**Location:**', '').trim();
  } else if (line.startsWith('Experienced software')) {
    intro = line.trim();
  } else if (line.includes('## Experience')) {
    currentSection = 'experience';
  } else if (line.includes('## Core Skills')) {
    currentSection = 'skills';
  } else if (line.startsWith('### ') && currentSection === 'experience') {
    if (currentExp) experiences.push(currentExp);
    currentExp = {
      title: line.replace('### ', '').trim(),
      company: '',
      period: '',
      location: '',
      description: [],
      tech: ''
    };
  } else if (line.startsWith('**') && currentExp && line.includes('|')) {
    const parts = line.split('|').map(p => p.trim());
    currentExp.company = parts[0].replace(/\*\*/g, '').trim();
    currentExp.period = parts[1].replace(/\*\*/g, '').trim();
    currentExp.location = parts[2]?.replace(/\*\*/g, '').trim() || '';
  } else if (line.startsWith('- ') && currentExp) {
    currentExp.description.push(line.replace('- ', '').trim());
  } else if (line.startsWith('**Tech:**') && currentExp) {
    currentExp.tech = line.replace('**Tech:**', '').trim();
  } else if (line.startsWith('### ') && currentSection === 'skills') {
    const skillCategory = line.replace('### ', '').trim();
    const nextLine = lines[i + 1];
    if (nextLine) {
      skills[skillCategory] = nextLine.split(',').map(s => s.trim());
    }
  }
}

if (currentExp) experiences.push(currentExp);
---

<Layout title={`${name} - ${title}`}>
  <div class="min-h-screen bg-background text-foreground">
    <ThemeToggle />
    
    <main class="container mx-auto px-4 py-12 max-w-4xl">
      <!-- Header -->
      <header class="mb-12">
        <h1 class="text-4xl font-bold mb-2">{name}</h1>
        <p class="text-xl text-muted-foreground mb-2">{title}</p>
        <p class="text-sm text-muted-foreground">{location}</p>
        <p class="mt-4 text-foreground leading-relaxed">{intro}</p>
      </header>

      <!-- Experience -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-6">Experience</h2>
        <div class="space-y-8">
          {experiences.map((exp) => (
            <div class="border-l-2 border-accent pl-6">
              <h3 class="text-xl font-semibold mb-1">{exp.title}</h3>
              <div class="text-sm text-muted-foreground mb-3">
                <span class="font-medium">{exp.company}</span> · {exp.period}
                {exp.location && ` · ${exp.location}`}
              </div>
              <ul class="space-y-2 mb-3">
                {exp.description.map((desc) => (
                  <li class="text-sm text-foreground flex gap-2">
                    <span class="text-accent mt-1">•</span>
                    <span>{desc}</span>
                  </li>
                ))}
              </ul>
              {exp.tech && (
                <p class="text-sm">
                  <span class="font-medium">Tech:</span> {exp.tech}
                </p>
              )}
            </div>
          ))}
        </div>
      </section>

      <!-- Skills -->
      <section>
        <h2 class="text-2xl font-bold mb-6">Core Skills</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {Object.entries(skills).map(([category, items]) => (
            <div>
              <h3 class="font-semibold mb-2">{category}</h3>
              <div class="flex flex-wrap gap-2">
                {items.map((skill) => (
                  <span class="inline-flex items-center rounded-md border border-border px-2.5 py-0.5 text-xs font-medium bg-secondary text-secondary-foreground">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </section>
    </main>
  </div>
</Layout>
